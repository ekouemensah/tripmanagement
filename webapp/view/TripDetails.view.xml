<mvc:View controllerName="tripmanagement.tripmanagement.controller.TripDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:t="sap.ui.table" 
    xmlns:c="sap.suite.ui.commons"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>title}">    
    <HBox>
        <VBox class="sapUiResponsiveMargin">
                <VBox id="itinerario">
                </VBox>
                <VBox id="assegnazionePosto">
                
                 <Panel headerText="Assegnazione Posto" width="15rem" class="sapUiResponsiveMargin" >  
                 <Label id="postoAssegnato" text="1A" />
                 <Button id="posto" icon="sap-icon://journey-change" text="Scegliere" class="sapUiSmallMarginBegin" press="onAnnulla" />
                </Panel>
                </VBox>
        </VBox>
        <VBox class="sapUiResponsiveMargin">
                <VBox id="riepilogo" class="sapUiResponsiveMargin">
                <Panel headerText="Riepilogo" width="15rem" class="sapUiResponsiveMargin" >  
                <Label id="prezzo" text="58Euro" width="100px" />
                 
                </Panel>
                </VBox>
                <VBox id="pagamento" class="sapUiResponsiveMargin">
                	<Label text="Pagamento" labelFor="GroupA" />
                    <RadioButtonGroup id="GroupA" class="sapUiResponsiveMargin">
                    <RadioButton text="Carta/Bancomat" selected="true" />
                    <RadioButton text="Abbonamento" />
					</RadioButtonGroup>
                    <Button id="pagare" icon="sap-icon://batch-payments" text="Pagare" class="sapUiSmallMarginBegin" press="onAnnulla" />
                </VBox>
        </VBox>
    </HBox>   
