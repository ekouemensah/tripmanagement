<mvc:View controllerName="tripmanagement.tripmanagement.controller.TripDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:t="sap.ui.table" 
    xmlns:c="sap.suite.ui.commons"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>title}">    
    <HBox>
        <VBox class="sapUiResponsiveMargin">
                <VBox id="itinerario">
                </VBox>
                <VBox id="assegnazionePosto">
                <Input 	id="viaggioId" visible="false"/>
                <Input 	id="itinerarioIniziale" visible="false"/>
                <Input 	id="prezzoIniziale" visible="false"/>
                <Input 	id="postoIniziale" visible="false"/>
                 <Panel headerText="Assegnazione Posto" width="15rem" class="sapUiResponsiveMargin" >  
                 <Label  text="Posto assegnato  :" />
                 <Label id="postoAssegnato" text="1A" />
                 <Button id="posto" icon="sap-icon://journey-change" text="Scegliere" class="sapUiSmallMarginBegin" press="onSceglierePosto" />
                <Label text="Extra costo (5 Euro)" />
                 <Button  icon="sap-icon://refresh" text="Annullare" class="sapUiSmallMarginBegin" press="onAnnullarePosto" />
				</Panel>
                </VBox>
        </VBox>
        <VBox class="sapUiResponsiveMargin">
                <VBox id="riepilogo" class="sapUiResponsiveMargin">
                <Panel headerText="Riepilogo" width="15rem" class="sapUiResponsiveMargin" >  
                <Label id="prezzo" text="0Euro" width="13rem" enabled="false"/>
				<Label text="Nome" labelFor="Nome" />
				<Input 	id="nome"/>
				<Label text="Cognome" labelFor="Cognome" />
				<Input 	id="cognome" />  	
                 
                </Panel>
                </VBox>
                <VBox id="pagamento" class="sapUiResponsiveMargin">
				 <Panel headerText="Pagamento" width="15rem" class="sapUiResponsiveMargin" >  
                	<!-- <Label text="Pagamento" labelFor="GroupA" /> -->					
                    <RadioButtonGroup id="GroupA" class="sapUiResponsiveMargin">
                    <RadioButton id="carta" text="Carta/Bancomat" selected="true" />
                    <RadioButton id="abbonamento" text="Abbonamento" />					
					</RadioButtonGroup>
					<Label text="Abbonamento/ Carta credito" labelFor="Abbonamento" />
				    <Input 	id="abbonamento_carta" /> 
                    <Button id="pagare" icon="sap-icon://batch-payments" text="Pagare" class="sapUiSmallMarginBegin" press="onPagare" />
                </Panel>
				</VBox>
        </VBox>
    </HBox>           
    </Page>
</mvc:View>
