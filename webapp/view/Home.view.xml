<mvc:View controllerName="tripmanagement.tripmanagement.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>title}">

        <content>
        <HBox justifyContent="End" height="15%">
        <Button text="BUS" id ="bus" class="sapUiSmallMarginBegin" icon="sap-icon://bus-public-transport" press="onBus" visible="false" />    
             <Button text="FERMATE" id="fermate" class="sapUiSmallMarginBegin" icon="sap-icon://stop" press="onFermate" visible="false" />    
             <Button text="TRATTE" id="tratte" class="sapUiSmallMarginBegin" icon="sap-icon://crossed-line-chart" press="onTratte" visible="false" /> 
             <Button text="VIAGGI" id="viaggi" class="sapUiSmallMarginBegin" icon="sap-icon://activate" press="onViaggi" visible="false" />    
             <Button text="STATISTICA" id="statistica" class="sapUiSmallMarginBegin" icon="sap-icon://manager-insight" press="onStatistica"  visible="false"/>  
         <!-- <Button icon="sap-icon://menu" text="Menu" class="sapUiSmallMarginBegin" press="onMenu" /> -->
         <Button icon="sap-icon://log" text="Log in" class="sapUiSmallMarginBegin" press="onLogin" />
         </HBox>
         <HBox height="25%">
         <VBox>
         <Input 	id="id_partenza" visible="false"/>
         	<Label text="Da" labelFor="productInput" />
		<Input 
			id="partenza"
			placeholder="Partenza"
			showSuggestion="true"
			showValueHelp="true"
			valueHelpRequest=".onValueHelpRequest"
            >
			<!-- <suggestionItems>
				<core:Item text="{Name}" />
			</suggestionItems> -->
			
		</Input>
        <DatePicker
					id="DataPartenza"
					placeholder="Data"
					change="handleChange"
					class="sapUiSmallMarginBottom"
                    valueFormat="dd.MM.yyy"
					showFooter="true"/>
        <!-- <CheckBox text="Ritorno" /> -->
         </VBox>
         <VBox>
         <Input 	id="id_arrivo" visible="false"/>
         <Label text="A" labelFor="productInput" />
		<Input 
			id="arrivo"
			placeholder="Arrivo"
			showSuggestion="true"
			showValueHelp="true"
			valueHelpRequest=".onValueHelpRequestPartenza"
            >
			<!-- <suggestionItems>
				<core:Item text="{Name}" />
			</suggestionItems> -->
			
		</Input>
        <TimePicker	id="OraPartenza" displayFormat = "HH:mm:ss" format = "HH:mm:ss"/>
         </VBox>
        
         <VBox>
         <Panel headerText="Ricerca" width="25rem" class="sapUiResponsiveMargin" >
         <!-- <Label text="Adulti" design="Bold" />
            <StepInput class="leftDescription"	value="1"	min="1" max="20" />
            <Label text="Bambini" design="Bold" />
            <StepInput class="leftDescription" value="0"	min="0"	max="20" /> -->
            <HBox justifyContent="Center" height="35%">
            <Button icon="sap-icon://car-rental" text="Cerca Viaggi" class="sapUiSmallMarginBegin" press="onCercaViaggi" />
            <Button text="Abbonamenti" class="sapUiSmallMarginBegin" icon="sap-icon://add-calendar" press="onAbbonamenti" /> 
            <Button icon="sap-icon://reset" text="Annulla" class="sapUiSmallMarginBegin" press="onAnnulla" />
            </HBox>
            </Panel>
         </VBox>
         <VBox>
         <Image	src="https://i.ibb.co/55PW6nC/ILLO-BUS-01-2229.gif" >
         </Image>
         </VBox>
         </HBox>
         <HBox justifyContent="Center" height="35%">
         <!-- <Image	src="https://i.ibb.co/55PW6nC/ILLO-BUS-01-2229.gif" ></Image> -->
         </HBox>
         </content>
    </Page>
</mvc:View>
