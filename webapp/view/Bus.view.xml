<mvc:View controllerName="tripmanagement.tripmanagement.controller.Bus"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:m="sap.m.OverflowToolbar"
    xmlns:t="sap.ui.table" 
    xmlns:c="sap.suite.ui.commons"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>Bus}">    
    <Panel headerText="Bus" width="25rem" class="sapUiResponsiveMargin" >
       
         <VBox>
         <Label text="Targa" />
        <Input 	id="targa" required ="true" tooltip = "required" showSuggestion="true"	showValueHelp="true"	
        valueHelpRequest=".onValueHelpRequest"></Input>      
         </VBox>
          <VBox>
         <Label text="Numero Posti" />
        <Input 	id="numPosti"	required ="true" tooltip = "required"></Input>      
         </VBox> 
                
          </Panel> 
           <VBox>
         <Image	src="https://i.ibb.co/zFZFbgB/bus.jpg" >
         </Image>
         </VBox>            
   <footer>
   <Toolbar>
   <content>
   <Button icon="sap-icon://create" text="Creare Bus" class="sapUiSmallMarginBegin" press="onSalva" />
   <Button icon="sap-icon://edit" text="Modifica Bus" class="sapUiSmallMarginBegin" press="onModifica" />
  <Button icon="sap-icon://reset" text="Annulla" class="sapUiSmallMarginBegin" press="onAnnulla" />
			
      </content>
      </Toolbar>
		</footer>
         
    </Page>
</mvc:View>
