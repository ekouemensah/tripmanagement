<mvc:View controllerName="tripmanagement.tripmanagement.controller.Tratte"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:m="sap.m.OverflowToolbar"
    xmlns:t="sap.ui.table" 
    xmlns:c="sap.suite.ui.commons"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>Tratte}">    
    <Panel headerText="Tratta" width="25rem" class="sapUiResponsiveMargin" >
       <VBox>
       <Input 	id="id_partenza" visible="false"/>
         	<Label text="Da" labelFor="productInput" />
		      <Input id="partenza"	placeholder="Partenza"	showSuggestion="true"	showValueHelp="true"	valueHelpRequest=".onValueHelpRequest">
        </Input> 
        </VBox>
        <VBox>
        <Input 	id="id_arrivo" visible="false"/>
         <Label text="A" labelFor="productInput" />
        <Input  id="arrivo"	placeholder="Arrivo"	showSuggestion="true"	showValueHelp="true"	valueHelpRequest=".onValueHelpRequest">		
        </Input>      
         </VBox>
         <VBox>
         <Label text="Costo" />
        <Input 	id="costo" type="Number"></Input>      
         </VBox>
          <!-- <VBox>
         <Label text="Durata(minuto)" />
        <Input 	id="durata"	type="Number"></Input>      
         </VBox> -->
         <VBox>
         <Label text="Distanza(km)" />
        <Input 	id="km"	type="Number"></Input>      
         </VBox>
          </Panel>
             <Panel headerText="Fermate" width="60rem" class="sapUiResponsiveMargin" >
       <Table id="tableId1" width="60%" mode="Delete" delete="deleteRow">
							<headerToolbar>
								<Toolbar>
									<ToolbarSpacer></ToolbarSpacer>
									<Button icon="sap-icon://add" type="Emphasized" press="onAdd"/>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column width="50%">
									<Text text="Cancellare fermata"/>
								</Column>
								<Column width="50%">
									<Text text="Fermata"/>   
                           <!-- <Input 	id="fermata" /> 
                           <Input 	id="id_fermata" visible="false"/>             -->
								</Column>								
							</columns>
						</Table>
          </Panel>
   <footer>
   <Toolbar>
   <content>
   <Button icon="sap-icon://save" text="Salva Tratta" class="sapUiSmallMarginBegin" press="onSalva" />
   <Button icon="sap-icon://edit" text="Modifica Tratta" class="sapUiSmallMarginBegin" press="onModifica" />
  <Button icon="sap-icon://reset" text="Annulla" class="sapUiSmallMarginBegin" press="onAnnulla" />
			<!-- <m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Save"/>
				<m:Button type="Reject" text="Cancel"/>
			</m:OverflowToolbar> -->
      </content>
      </Toolbar>
		</footer>
         
    </Page>
</mvc:View>
