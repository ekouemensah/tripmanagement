<mvc:View controllerName="tripmanagement.tripmanagement.controller.Fermate"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:m="sap.m.OverflowToolbar"
    xmlns:t="sap.ui.table" 
    xmlns:c="sap.suite.ui.commons"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>Fermate}">    
    <Panel headerText="Fermata" width="25rem" class="sapUiResponsiveMargin" >
       
         <VBox>
         <Input 	id="id_fermata" visible="false"/>
         <Label text="Via" />
        <Input 	id="via" required ="true" tooltip = "required" showSuggestion="true"	showValueHelp="true"	
        valueHelpRequest=".onValueHelpRequest"></Input>      
         </VBox>
          <VBox>
         <Label text="Citta" />
        <Input 	id="citta"	></Input>      
         </VBox>
         <VBox>
         <Label text="Civico" />
        <Input 	id="civico" type="Number"	></Input>      
         </VBox>
          <VBox>
         <Label text="Cap" />
        <Input 	id="cap"	type="Number"></Input>      
         </VBox>
          </Panel>
             <VBox>
         <Image	src="https://i.ibb.co/b6tHmr9/fermata.jpg" >
         </Image>
         </VBox> 
   <footer>
   <Toolbar>
   <content>
   <Button icon="sap-icon://create" text="Creare Fermata" class="sapUiSmallMarginBegin" press="onSalva" />
   <Button icon="sap-icon://edit" text="Modifica Fermata" class="sapUiSmallMarginBegin" press="onModifica" />
  <Button icon="sap-icon://reset" text="Annulla" class="sapUiSmallMarginBegin" press="onAnnulla" />
			
      </content>
      </Toolbar>
		</footer>
         
    </Page>
</mvc:View>
